<div class="mission__nav-links">
  <%= link_to "Accessible Agents", accessible_agents_path %>
  <%= link_to "Add New Mission to Group", new_mission_group_mission_path(@mission_group_id) %>
</div>
<div class="mission__group-name">
  <h1> <%= @mission_group.name %> </h1>
</div>
<div class="mission__total-loyalty-points">
  <h2> Total LP: <%= @total_loyalty_points %> </h2>
</div>
<div class="mission__loyalty-points-per-user">
  <h2> Per User LP: <%= @loyalty_points_per_user %> </h2>
</div>
<div class="mission__mission-map">
  <%= link_to "Mission Map", "http://evemaps.dotlan.net/map/Caldari_VS_Gallente/#{@mission_system_list}" %>
</div>
<table>
  <thead>
    <th> Name </th>
    <th> Posted By </th>
    <th> Destination </th>
    <th> Loyalty Points </th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @missions.each do |mission| %>
    <tr>
      <td> <%= mission.name %> </td>
      <td> <%= mission.user.main_character_name %> </td>
      <td> <%#= mission.fac_war_system.solarSystemName %> </td>
      <td> <%= mission.loyalty_points %> </td>
      <td> <%= link_to "Mark Obstructed", %> </td>
      <td> <%= link_to "Mark Completed", %> </td>
      <td> <%= link_to "View", mission_group_mission_path(@mission_group_id, mission) %> </td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>

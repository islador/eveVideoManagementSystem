<h1>Roles</h1>

<table>
  <thead>
    <th> Name </th>
    <th> Description </th>
    <th> Hierarchy Ranking </th>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
    <tr>
      <td> <%=link_to "#{role.name}", role_path(role) %> </td>
      <td> <%= role.description %> </td>
      <td> <%= role.hierarchy_ranking %> </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= form_for(@recruit_contact) do |f| %>
  <%= render "shared/error_messages", :target => @recruit_contact %>
  <div class="form-group">
    All Fields Required
  </div>
  <div class="form-group">
    <%= f.label :name, "Contact's Name" %>
    <%= f.text_field :name, placeholder: "EG: Alexy Solette" %>
  </div>
  <div class="form-group">
    <%= f.label :contacted_by, "Contacted By" %>
    <%= f.text_field :contacted_by, placeholder: "EG: islador" %>
  </div>
  <div class="form-group">
    <%= f.label :timezone, "The Contact's Timezone" %>
    <%= f.select :timezone, @timezone_options, prompt: "What Timezone are they in?"%>
  </div>
  <div class="form-group">
    <%= f.label :conversation_type, "Conversation Type" %>
    <%= f.select :conversation_type, @conversation_type_options, prompt: "What kind of chat?"%>
  </div>
  <div class="form-group">
    <%= f.label :conclusion, "Conclusion" %>
    <%= f.text_area :conclusion, size: "50x5", placeholder: "Did you like them? Were they interested in joining? Were they bad at english? Would you chat with them more?" %>
  </div>
  <div class="form-group">
    <%= f.submit "Add new Contact" %>
  </div>
<% end %>

<div class="qualified-recruit">
  <% @requirements.each do |requirement| %>
  <div class="qualified-recruit__requirement">
    <%= requirement.detail %>
  </div>
  <% end %>
  <div class="qualified-recruit__requirement">
    A recruit must be in the continental US Timezones, -8 to -5 on <a href="http://www.statsagogo.com/timezone/timezone16.gif">this map.</a>
    A recruit must have positive or neutral Caldari State Standings BEFORE diplomacy
  </div>
</div>
